@model Tuple<Cleaners.Models.Cleaner, List<int>>

@{
    ViewBag.Title = "CleanerSchedule";
}

<div class="container">
    <div class="jumbotron mainHeading">
        <h2>Schedule</h2>
    </div>
    <div class="jumbotron linkBridge">

        <div class="row">
            <div class="col-sm-4">
                @Html.ActionLink("Back", "Cleaner", null, new { @class = "btn btn-primary" })
            </div>
            <div class="col-sm-8">
                <p style="font-size:15px">@Html.DisplayFor(c => c.Item1.Name)</p>
            </div>
        </div>
    </div>
    <div class="jumbotron">
        @using (Html.BeginForm("Calculate", "Home", FormMethod.Post))
        {

            <table class="table table-responsive" id="shedule">
                <tbody>
                    @foreach (var item in Model.Item2)
                    {
                        switch (item)
                        {
                            case 1:
                                <tr>
                                    <th class="bg-danger">Monday</th>
                                    <td>@Html.Action("DisplayCustomer", "Home", new { id = Model.Item1.Id, day = "Monday" })</td>
                                </tr>
                                break;
                            case 2:
                                <tr>
                                    <th class="bg-danger">Tuesday</th>
                                    <td>@Html.Action("DisplayCustomer", "Home", new { id = Model.Item1.Id, day = "Tuesday" })</td>
                                </tr>
                                break;
                            case 3:
                                <tr>
                                    <th class="bg-danger">Wednesday</th>
                                    <td>@Html.Action("DisplayCustomer", "Home", new { id = Model.Item1.Id, day = "Wednesday" })</td>
                                </tr>
                                break;
                            case 4:
                                <tr>
                                    <th class="bg-danger">Thursday</th>
                                    <td>@Html.Action("DisplayCustomer", "Home", new { id = Model.Item1.Id, day = "Thursday" })</td>
                                </tr>
                                break;
                            case 5:
                                <tr>
                                    <th class="bg-danger">Friday</th>
                                    <td>@Html.Action("DisplayCustomer", "Home", new { id = Model.Item1.Id, day = "Friday" })</td>
                                </tr>
                                    break;
                            }
                        
                    }
                </tbody>
               

            </table>
            <input class="btn btn-primary" type="submit" name="submit" value="Calculate" /><br>
        }
    </div>

</div>