@model IEnumerable<Cleaners.Models.Cleaner>

@{
    ViewBag.Title = "Cleaner";
}
<div class="container">
    <div class="jumbotron mainHeading">
        <h2>Cleaners</h2>
</div>
    <div class="jumbotron linkBridge">
        <div class="row">
            <div class="col-md-9 col-sm-9">

                <p>
                    <a href='@Url.Action("Add", "Home")'><i class="fa fa-plus-square fa-2x "></i></a>
                    @*@Html.ActionLink("NEW", "Add", null, new { @class= "btn btn-default fa fa-plus-square" })*@
                </p>
            </div>
                <div class="col-md-3 col-sm-3">
                    @using (Html.BeginForm())
            {
                        @*<p>
                                Cleaner: @Html.DropDownList("CleanerName", "All")
                                Search: @Html.TextBox("searchString")
                                <input type="submit" value="Filter" />
                            </p>*@
                        <form class="navbar-form" role="search">
                            <div class="input-group add-on">
                                @Html.TextBox("searchString", null, new { @class = "form-control" })
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search-plus"></i></button>
                                </div>
                            </div>
                        </form>

                    }
                </div>
            
        </div>
    </div>
       

    <div class="jumbotron">
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(c => c.Name)
                    </th>
                    <th scope="col">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.ActionLink((string)@item.Name, "Details", new { id = item.Id })
                        </td>
                        <td>
                            <a href='@Url.Action("Edit", "Home", new { id = item.Id, @class="btn btn-default"})'><i class="fa fa-edit fa-2x"></i></a> |
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
                            <a href='@Url.Action("Delete", "Home", new { id = item.Id, @class="btn btn-default"})'><i class="fa fa-trash-o fa-2x"></i></a> |
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            <a href='@Url.Action("CleanerSchedule", "Home", new { id = item.Id, @class="btn btn-default"})'><i class="fa fa-calendar-check-o fa-2x"></i></a>
                            @*@Html.ActionLink("View Schedule", "CleanerSchedule", new { id = item.Id })*@
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
